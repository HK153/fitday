<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fittrio.fitday.dao.BoardDAO">

	<!-- 코멘트 등록 -->
	<!-- <select id="insertComment" parameterType="commentdto"> insert into 
		comment </select> -->

	<select id="getAllBoardCnt" resultType="int">
		select count(*) from board
	</select>

	<select id="getAllBoardList" resultType="boarddto">
		select * from board
	</select>
	
	<select id="getOneBoard" resultType="boarddto" parameterType="int">
		select * from board where board_seq=#{boardSeq}
	</select>
	
	<insert id="insertBoard" parameterType="boarddto">
		insert into board(user_seq,category,title,content,DATE,board_type)
			values(#{userSeq},#{category},#{title},#{content},now(),#{boardType})
	</insert>
</mapper>